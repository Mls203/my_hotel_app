@model HotelApp.Models.Hotel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            gap: 20px;
            margin: 20px auto;
            width: 80%;
            max-width: 1200px;
        }

        .image-gallery {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .main-image {
            position: relative;
            width: 100%;
            height: 400px;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            border-radius: 8px;
        }

            .main-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .thumbnail-row {
            display: flex;
            justify-content: space-between;
            gap: 10px;
        }

        .thumbnail {
            width: calc(25% - 10px); 
            height: 80px;
            background-color: #f0f0f0;
            border-radius: 6px;
            overflow: hidden;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .thumbnail img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.3s;
            }

            .thumbnail:hover img {
                transform: scale(1.1);
            }

        .hotel-details {
            flex: 1;
            padding: 20px;
            background: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .hotel-details h2 {
                margin: 0;
                font-size: 24px;
                color: #333;
            }

            .hotel-details p {
                margin: 10px 0;
                color: #666;
                line-height: 1.5;
            }
    </style>
</head>
<body>

    <div class="container" style="margin-top:100px;">
        <!-- Left: Image Gallery -->
        <div class="image-gallery">
            <!-- Main Image -->
            <div class="main-image" id="mainImage">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="Main Image">
                @*<img src="https://via.placeholder.com/600x400" alt="">*@
            </div>

            <!-- Thumbnails -->
            @*<div class="thumbnail-row">
                <div class="thumbnail" data-image="https://via.placeholder.com/600x400">
                    <img src="https://via.placeholder.com/150x100/ffh7f" alt="Thumbnail 1">
                </div>
                <div class="thumbnail" data-image="https://via.placeholder.com/600x400/ff7f7f">
                    <img src="https://via.placeholder.com/150x100/ff7f7f" alt="Thumbnail 2">
                </div>
                <div class="thumbnail" data-image="https://via.placeholder.com/600x400/87ceeb">
                    <img src="https://via.placeholder.com/150x100/87ceeb" alt="Thumbnail 3">
                </div>
                <div class="thumbnail" data-image="https://via.placeholder.com/600x400/ffa500">
                    <img src="https://via.placeholder.com/150x100/ffa500" alt="Thumbnail 4">
                </div>
            </div>*@
        </div>

        <!-- Right: Hotel Details -->
        <div class="hotel-details">

            <p><strong>Name:</strong>  @Model.Name</p>
            <p><strong>Location:</strong> @Model.Location</p>
            <p><strong>Rating:</strong> @Model.Rating</p>
            <p><strong>Name:</strong>  @Model.DatesOfTravel[0] / @Model.DatesOfTravel[1]</p>
            <p><strong>Board Basis:</strong> @Model.BoardBasis</p>
            <p><strong>Rooms</strong></p>
            <ul>
                @foreach (var room in Model.Rooms)
                {
                    <li>@room.RoomType - @room.Amount available</li>
                }
            </ul>

        </div>
        </div>








    <!-- JavaScript -->
    <script>

        // Thumbnail click event to change the main image
        const thumbnails = document.querySelectorAll('.thumbnail');
        const mainImage = document.getElementById('mainImage').querySelector('img');

        thumbnails.forEach(thumbnail => {
            thumbnail.addEventListener('click', function () {
                // Get the image URL from the data-image attribute of the clicked thumbnail
                const imageUrl = this.getAttribute('data-image');

                // Update the main image src with the new image URL
                mainImage.setAttribute('src', imageUrl);
            });
        });

    </script>
</body>
</html>
