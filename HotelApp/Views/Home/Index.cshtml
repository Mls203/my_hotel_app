    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            padding: 20px;
        }

        .card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 300px;
            padding: 20px;
            text-align: center;
            transition: transform 0.2s ease-in-out;
        }

            .card:hover {
                transform: scale(1.05);
            }

            .card h3 {
                margin: 0;
                font-size: 1.5em;
                color: #333;
            }

        .card {
            width: 300px;
            height: 400px; 
            border: 1px solid #ccc;
            padding: 10px;
            margin: 10px;
            border-radius: 8px;
            overflow: hidden;
            background-color: #fff;
        }

         
            .card img {
                width: 100%; 
                height: 100%; 
                object-fit: cover;
            }

        button {
            border: none; 
            outline: none; 
            background-color: #fff; 
            color: white; 
            padding: 10px 20px; 
            cursor: pointer; 
            border-radius: 5px;
            font-size: 16px; 
        }

           
            button:hover {
                background-color: #f4f4f4; 
                border-color: #fff;
            }
    </style>

    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1 style="text-align:center; margin-top: 20px;">Hotels</h1>
    <div class="container" id="hotelList">
     
    </div>
    

    <script>
        $(document).ready(function () {

            $.ajax({
                url: "../api/Hotels", 
                type: "GET",
                dataType: "json", 
                success: function (result) {
                    const hotelList = $("#hotelList");
                    console.log(result);
                    
                    for (let i = 0; i < result.length; i++) {

                        console.log(result[i].Name);
                        const card = `
                    <div class="card">
                        <img src="${result[i].ImageUrl}" alt="${result[i].Name}">
                        <button type="button" class="btn-details" data-id="${result[i].Id}"><h3>${result[i].Name}<h3></button>
                    </div>
                `;
                        hotelList.append(card);
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Hata oluştu: ", error);
                }
            });
        });

        $(document).ready(function () {
            $(document).on('click', '.btn-details', function () {
                
                var hotelId = $(this).data();
                for (var key in hotelId) {

                    var id = hotelId[key];
                }
                //console.log(id);
                $.ajax({
                    url: "../Home/Detail",
                    type: "get",
                    data: { id: id },
                    success: function (detail) {
                        console.log("success");
                        window.location.href = '/Home/Detail?id='+id;
                    },
                    error: function (xhr, status, error) {
                        console.error("error: ", error);
                    }
                });
                function sendDataToController(hotelData) {
                  
                    console.log("Hotel Data: ", hotelData);  

                }

            });

        });

    </script>
</body>
